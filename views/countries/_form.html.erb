<%= form_with(url: (@country.new_record? ? @country : country_path(@country.id)),model: @country, local: true) do |form| %>
  <% if country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% country.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="padding-top:20px;">
    <%= form.label :headline %>
    <%= form.text_field :headline, id: :country_headline , style: 'width:100%;' %>
  </div>

  <div class="field" style="padding-top:10px">
    <%= form.label :context %>
    <%= form.text_area :context, id: :country_context, style: 'width:100%;' %>
  </div>

  <div class="actions" style="text-align:left;padding-top:10px;">
    <%= form.submit %>
  </div>
<% end %>
