                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><%= post.rating %></td>
                <td><%= @country.headline %></td>
                <td><%= link_to 'Show', country_city_place_post_path(@place.country_id, @place.city_id, @place.id, post.id) %></td>
